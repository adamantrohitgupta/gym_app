<div class="container p-5 ">
  
  <h4><%= t('welcome') %></h4>
  
  <div class="row ">
    <% @gym.each do |gym| %>

      <div class="card mb-3" style="max-width: 1000px;">
        <div class="row ">
          <div class="col-md-4 img-fluid ">
            <% if gym.images.persisted? %>
              <%= image_tag(gym.images, width: "100%" , height: "100%" ) %>
                <% else %>
                  <h4>Image not found</h4>
                  <% end %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= gym.name%></h5>
              <p class="card-text"> <%=gym.discription%></p>
              <p class="card-text">
                <%= link_to "Explore Gym" , gym_path(gym),class:"button_membership btn btn-lg btn-success mt-5 text-white"  %> 
              <p>  
              <% earning = 0 %>
               <strong>Earnings:</strong>
               <% gym.plans.each do |plan| %>
                 <% earning += plan.membership.price %>
               <% end %>
               <%= earning %>
               </p>
                    
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>