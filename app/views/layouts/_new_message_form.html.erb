<div class="form-group msg-form",data-controller="message">
  <%= form_with(model: [@single_room ,@message], remote: true, class: "d-flex",id: "message-form" ) do |f| %>
    <%= f.text_field :content, id: 'chat-text', class: "form-control msg-content", autocomplete: 'off' %>
    <%= f.submit data: { disable_with: false }, class: "btn btn-primary", id: "msgbtn" %>
  <% end %>
</div>
