<div class="row">
  <div class="col-md-3 p-3 m-2">
    <h5> Hi <%= @current_user.name %> </h5>
    <h4> Users </h4>
    <div>
      <%= turbo_stream_from "users" %>
      <div id="users">
        <%= render @users %>
      </div>
    </div>
    <h4> Rooms </h4>
    <%= render partial: "layouts/new_room_form" %>
    <div>
      <%= turbo_stream_from "rooms" %>
      <div id="rooms">
        <%= render @rooms %>
      </div>
    </div>
  </div>

  <div class="col-md-7  bg-dark text-light p-2 m-3 "id="chatcontainer">
    <% if @single_room %>
      <div > <h4 class="text-center"> <%= @user&.name || @single_room.name %> </h4></div>
       <%= turbo_stream_from @single_room %>
      <div id="messages" style="overflow-y: auto; max-height: 400px;" data-controller="message"  >
        <%= render @messages %>
      </div>
      <%= render partial: 'layouts/new_message_form' %>
       
    <% end %>
  </div>
</div>
 
 