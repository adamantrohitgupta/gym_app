<%= form_with model: @gym_class do |form| %>
  <div>
   <%= form.label :name %><br>
   <%= form.text_field :name %>
   <% @gym_class.errors.full_messages_for(:name).each do |message| %>
   <div><%= message %></div>
   <% end %>
  </div>

  <div>
   <%= form.label :description %><br>
   <%= form.text_area :description %><br>
   <% @gym_class.errors.full_messages_for(:description).each do |message| %>
   <div><%= message %></div>
   <% end %>
  </div>
     
  <div>
   <%= form.label :images, style: "display: block" %>
   <%= form.file_field :images %>
  </div>

  <div>
   <%= form.submit %>
  </div>
<% end %>